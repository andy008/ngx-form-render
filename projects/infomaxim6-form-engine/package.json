{
  "name": "infomaxim6-form-engine",
  "version": "1.2.0",
  "description": "Form Rendering Engine using Angular 20+ and Bootstrap 5",
  "author": "Andrew Farrell <andy@infomaxim.com>",
  "license": "ISC",
  "sideEffects": false,
  "type": "module",
  "publishConfig": { "access": "public" },

  "peerDependencies": {
    "@angular/core": ">=18 <21",
    "@angular/common": ">=18 <21",
    "@angular/forms": ">=18 <21",
    "@angular/localize": ">=18 <21",
    "@angular/platform-browser": ">=18 <21",
    "@angular/platform-browser-dynamic": ">=18 <21",
    "@angular/router": ">=18 <21",
    "rxjs": "^7.8.0",
    "zone.js": ">=0.14 <0.16"    
  },
  "peerDependenciesMeta": {
    "@angular/animations": { "optional": true },
    "@angular/localize": { "optional": true }
  },

  "dependencies": {
    "tslib": "^2.6.0"
  },

  "devDependencies": {
    "ng-packagr": "^20.3.0"
  },

  "scripts": {
    "build": "ng build infomaxim6-form-engine",
    "pack:dry": "cd ../../dist/infomaxim6-form-engine && npm pack --dry-run",
    "release:patch": "npm run build && cd ../../dist/infomaxim6-form-engine && npm version patch && npm publish --access public",
    "release:minor": "npm run build && cd ../../dist/infomaxim6-form-engine && npm version minor && npm publish --access public"
  },

  "exports": {
    ".": {
      "types": "./public-api.d.ts",
      "default": "./fesm2022/infomaxim6-form-engine.mjs"
    }
  },
  "files": [
    "bundles/",
    "esm2022/",
    "fesm2022/",
    "public-api.d.ts",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
